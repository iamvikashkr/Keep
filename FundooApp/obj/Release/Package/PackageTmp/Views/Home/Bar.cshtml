@{
    Layout = "~/Views/Shared/TempLayout.cshtml";

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <sidenav></sidenav>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id="reg" ,@name="reg", @class = "form-horizontal", role = "form" }))
    {
    <div layout="row" style="margin-top:100px">

        <md-card md-dynamic-height class="card" flex-lg="40" flex-md="50" flex-sm="60" flex-xs="70">
            <md-progress-linear id="progress" md-mode="indeterminate"></md-progress-linear>
            <div style="min-height: 40px;margin:auto;color:slategrey; font-weight:bold;font-size:30px">User Registration</div>
            <md-content>

                <md-tabs md-dynamic-height>
                    <div>
                        <md-tab label="PERSONAL">
                            <md-content>
                                <div style="padding-left:40px">

                                    <div layout="row">
                                        <md-input-container style="padding-right:50px">
                                            <label>First Name</label>
                                            <input type="text" id="fname" name="fname" ng-model="fname" required />
                                        </md-input-container>
                                        <md-input-container>
                                            <label>Last Name</label>
                                            <input type="text" id="lname" name="lname" ng-model="lname" required />
                                        </md-input-container>
                                    </div>

                                    <div layout="row" >
                                        <label style="font-weight:bold">Gender:</label>
                                        <md-radio-group name="gender" >
                                            <div style="padding-left:30px;display:inline-flex; " layout-xs="column" >
                                                <md-radio-button class="radio-padding" value="male"> Male </md-radio-button>
                                                <md-radio-button class="radio-padding" value="female"> Female </md-radio-button>
                                                <md-radio-button class="radio-padding" value="other"> Other </md-radio-button>
                                            </div>
                                        </md-radio-group>
                                    </div>

                                    <div layout="row" style="margin-top:15px">
                                        <label style="font-weight:600"> Date of Birth: </label>
                                        <md-datepicker layout-xs="column" ng-model="model.dob" id="dob" md-placeholder="Enter date">
                                        </md-datepicker>
                                    </div>

                                    <div layout="row" >
                                        <md-input-container flex-lg="90" flex-sm="80" flex-md="80" flex-xs="70">
                                            <label>Aadhar Number </label>
                                            <input  type="text" name="aadhar" id="aadhar" ng-model="aadhar" ng-maxlength="10" md-maxlength="10" ng-minlength="10" ng-pattern="/[0-9]{10}/" required />
                                        </md-input-container>
                                    </div>

                                    <div layout="row" style="margin-top:-20px">
                                        <md-input-container flex-lg="90" flex-sm="80" flex-md="80" flex-xs="70">
                                            <label>Mobile Number </label>
                                            <input type="text" name="mobile" id="mobile" ng-model="mobile" ng-maxlength="10" md-maxlength="10" ng-minlength="10" ng-pattern="/[0-9]{10}/" required />
                                        </md-input-container>
                                    </div>
                                    <div layout="row" >
                                        <div style="margin:auto">
                                            <md-button class="md-raised md-primary"  style="font-weight:600  ;">NEXT</md-button>
                                        </div>
                                    </div>
                                </div>
                            </md-content>
                        </md-tab>
                    </div>



                    <md-tab label="Address">
                        <md-content>
                            <div style="padding-left:40px">
                                <div layout="row">
                                    <md-input-container flex-lg="90" flex-sm="80" flex-md="80" flex-xs="70">
                                        <label>Address1</label>
                                        <input type="text" ng-model="address1" id="address1" name="address1" required ng-maxlength="100" md-maxlength="100" />
                                    </md-input-container>
                                </div>

                                <div layout="row">
                                    <md-input-container flex-lg="90" flex-sm="80" flex-md="80" flex-xs="70">
                                        <label>Address2</label>
                                        <input type="text" ng-model="address2" id="address2" name="address2" required ng-maxlength="100" md-maxlength="100" />
                                    </md-input-container>
                                </div>

                                <div layout="row">
                                    <md-input-container flex-lg="90" flex-sm="80" flex-md="80" flex-xs="70">
                                        <label>City</label>
                                        <input type="text" ng-model="model.city" id="city" name="city" ng-maxlength="10" md-maxlength="10" ng-pattern="/^[a-zA-Z]*$/" required />
                                    </md-input-container>
                                </div>

                                <div layout="row">
                                    <md-input-container flex="45">
                                        <label>District</label>
                                        <input type="text" name="dis" ng-model="model.district" id="district" ng-maxlength="10" md-maxlength="10" ng-pattern="/^[a-zA-Z]*$/" required />
                                    </md-input-container>

                                    <md-input-container flex="45">
                                        <label>Pin Code</label>
                                        <input type="text" ng-model="model.Pin " id="Pin" name="Pin" ng-maxlength="6" md-maxlength="6" ng-pattern="/^[0-9]{6}/" required />
                                    </md-input-container>
                                </div>
                                <div layout="row">
                                    <md-input-container flex="45">
                                        <md-select ng-model="model.state" id="state" placeholder="Select State">
                                            <md-option value="maharashtra">
                                                Maharashtra
                                            </md-option>
                                            <md-option value="karnataka">
                                                Karnataka
                                            </md-option>
                                            <md-option value="goa">
                                                Goa
                                            </md-option>
                                        </md-select>
                                    </md-input-container>

                                    <md-input-container flex="45">
                                        <md-select ng-model="model.country" id="country" placeholder="Select Country">
                                            <md-option value="india">
                                                India
                                            </md-option>
                                            <md-option value="usa">
                                                USA
                                            </md-option>
                                        </md-select>
                                    </md-input-container>
                                </div>

                                <div layout="row">
                                    <div style="margin:auto">
                                        <md-button class="md-raised md-primary" style="font-weight:600  ;">BACK</md-button>
                                        <md-button class="md-raised md-primary" style="font-weight:600  ;">NEXT</md-button>

                                    </div>
                                </div>
                            </div>

                        </md-content>
                    </md-tab>




                    <md-tab label="Security">
                        <md-content>
                            <div style="padding-left:40px;">

                                @*<div layout="row" style="">
                                    <h4 style="margin-top:30px;">Select Role:</h4>
                                    <md-input-container class="md-block" flex-gt-sm="45">
                                        <md-select ng-model="model.role" id="role" placeholder="Role">
                                            <md-option value="role">
                                                Select Role
                                            </md-option>
                                            <md-option value="admin">
                                                Admin
                                            </md-option>
                                            <md-option value="client">
                                                Client
                                            </md-option>
                                            <md-option value="enduser">
                                                End-User
                                            </md-option>
                                        </md-select>
                                    </md-input-container>
                                </div>*@
                                <div layout="row">
                                    <md-input-container flex="90">
                                        <label>Email</label>
                                        <input type="text" name="email" ng-model="email" id="email" required />

                                    </md-input-container>
                                </div>
                                <div layout="row">
                                    <md-input-container flex="90">
                                        <label>Password</label>
                                        <input type="password" name="password" ng-model="model.password" id="password " required />

                                    </md-input-container>
                                </div>
                                <div layout="row">
                                    <md-input-container flex="90">
                                        <label> Confirm Password</label>
                                        <input type="password" name="confirm" ng-model="confirm" required />

                                    </md-input-container>
                                </div>
                                <div layout="row">
                                    <div style="margin:auto">
                                        <md-button class="md-raised md-primary" style="font-weight:600  ;">BACK</md-button>
                                        <md-button class="md-raised md-primary" type="submit" id="regbtn" ng-click="reg() " ng-disabled="reg.$invalid" style="font-weight:600  ;">Submit</md-button>
                                    </div>
                                </div>

                            </div>
                        </md-content>
                    </md-tab>
                </md-tabs>
            </md-content>
        </md-card>
    </div>
        @*<div layout="row">
                <div flex-lg="25" flex-md="30" flex-sm="30" flex-xs="30" style="margin-top:00px;height:600px">
                    afsafasf
                </div>

                <div flex-lg="50" flex-md="50" flex-sm="50" flex-xs="50" style="background-color:forestgreen;margin-top:00px;height:600px">
                    afsafasf
                </div>
            </div>*@




    }
</body>


</html>

